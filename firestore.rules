rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Posts collection rules
    match /posts/{postId} {
      // Allow all authenticated users to read any post
      allow read: if isSignedIn();
      
      // Allow authenticated users to create posts
      allow create: if isSignedIn() 
                    && request.resource.data.userId == request.auth.uid;
      
      // Allow any authenticated user to update posts (for likes/comments count)
      // But they can only modify likes, comments, and likedBy fields
      allow update: if isSignedIn() && (
        // Owner can update everything
        request.auth.uid == resource.data.userId ||
        // Others can only update likes, comments, and likedBy
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'comments', 'likedBy']))
      );
      
      // Allow users to delete only their own posts
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Comments collection rules
    match /comments/{commentId} {
      // Allow all authenticated users to read any comment
      allow read: if isSignedIn();
      
      // Allow authenticated users to create comments
      allow create: if isSignedIn() 
                    && request.resource.data.userId == request.auth.uid;
      
      // Allow users to delete only their own comments
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Devices collection rules (top-level for community posts)
    match /devices/{deviceId} {
      // Allow all authenticated users to read devices
      allow read: if isSignedIn();
      
      // Allow authenticated users to create devices
      allow create: if isSignedIn() 
                    && request.resource.data.userId == request.auth.uid;
      
      // Allow users to update only their own devices
      allow update: if isOwner(resource.data.userId);
      
      // Allow users to delete only their own devices
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Users collection rules (user profiles and their subcollections)
    match /users/{userId} {
      // Allow users to read any user profile (for displaying names, avatars, etc.)
      allow read: if isSignedIn();
      
      // Allow users to create/update only their own profile
      allow create, update: if isOwner(userId);
      
      // Don't allow profile deletion
      allow delete: if false;
      
      // Nested devices subcollection (user's personal inventory)
      match /devices/{deviceId} {
        // Allow users to read only their own devices
        allow read: if isOwner(userId);
        
        // Allow users to create devices in their own collection (no userId check needed)
        allow create: if isOwner(userId);
        
        // Allow users to update their own devices
        allow update: if isOwner(userId);
        
        // Allow users to delete their own devices
        allow delete: if isOwner(userId);
      }
    }
    
    // Default rule: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
